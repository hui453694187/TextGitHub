<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".LocaltionActivity" >

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popupmenu_header_title_bg" >

        <ImageView
            android:id="@+id/back_localtionImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_back" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@drawable/noti_line" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="手机定位追踪"
                android:textColor="#fffdff"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <controls.ClearEditText
            android:id="@+id/login_et_passwork"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawableLeft="@drawable/login_lock"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/edittext_close"
            android:ems="10"
            android:hint="被盗手机当前号码"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHint="#43b510" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <controls.ClearEditText
            android:id="@+id/login_et_passwork"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawableLeft="@drawable/login_lock"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/edittext_close"
            android:ems="10"
            android:hint="被盗手机安全码"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHint="#43b510" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/switch_mapBut"
            android:background="@drawable/selector_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换模式" />

        <com.baidu.mapapi.map.MapView
            android:id="@+id/baidu_map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>